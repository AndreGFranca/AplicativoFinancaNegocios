@typeparam T


<MudTable Items="@Dados" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@IsLoading" LoadingProgressColor="Color.Info">
        <HeaderContent>
            @Cabecalho
        </HeaderContent>
        <RowTemplate>
            @Linha(context)
        </RowTemplate>
    </MudTable>
@functions {
    [Parameter]
    public RenderFragment Cabecalho { get; set; }
    [Parameter]
    public RenderFragment<T> Linha { get; set; }
    [Parameter]
    public IReadOnlyList<T> Dados { get; set; }
    [Parameter]
    public bool IsLoading { get; set; }
}
