    @if (IsLoading)
    {
        <MudProgressCircular Color="Color.Default" Indeterminate="true" />
    }
    else
    {
        <MudExpansionPanels Class="my-2">
            <MudExpansionPanel Text="@NomePagina" IsInitiallyExpanded="Expandir" IsExpandedChanged="() => Expandir = !Expandir">
                @Conteudo
            </MudExpansionPanel>
        </MudExpansionPanels>
    }

@code {
    [Parameter]
    public string NomePagina { get; set; }
    [Parameter]
    public RenderFragment Conteudo { get; set; }
    [Parameter]
    public bool IsLoading { get; set; }
    [Parameter]
    public bool Expandir { get; set; } = false;
}
